.marketing
    text-align: center
    background: url('/assets/img/marketing-bg.jpeg') center center
    background-attachment: fixed
    padding: 80px 0
    color: #fff
    margin: 50px 0
    h1,
    h2
        text-shadow: 3px 3px #328287
    h2
        margin-bottom: 50px

    &-git
        background-image: url('/assets/img/cursos/git-real-life-pattern.png')
        background-position: left center
        background-repeat-x: no-repeat
        background-size: cover
        background-color: #2B5082
        h1,
        h2
            text-shadow: 1px 3px 5px #000

    .btn-marketing
        background: darken(#328287, 30%)
        color: #fff
        padding: 20px 40px
        text-decoration: none
        font-size: rem(22px)
        border-radius: 30px
        transition: all .2s
        &:hover
            background: #328287
        &.btn-git
            background: #0a326b
            &:hover
                background: lighten(#0a326b, 10%)

.container-donation
    display: table
    margin: auto
.form-button
    float: left
    padding: 30px
    display: block
    margin: auto
